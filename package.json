{
  "name": "stock-watch",
  "version": "1.0.0",
  "description": "## Phase 1 - Make it work!",
  "main": "server/server.js",
  "dependencies": {
    "apollo-server-express": "^3.4.0",
    "graphql": "^15.6.1"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "if-env": "^1.0.4"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "cd server && npm start",
    "start:dev": "concurrently \"cd server && npm run watch\" \"cd client && npm start\"",
    "debug": "node ./node_modules/.bin/ts-node -- ./server.ts",
    "install": "cd server && npm i && cd ../client && npm i",
    "seed": "cd server && npm run seed",
    "build": "cd client && npm run build"
  },
  "keywords": [],
  "author": "Stock-Watch Team",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/awolrob/stock-watch.git"
  },
  "bugs": {
    "url": "https://github.com/awolrob/stock-watch/issues"
  },
  "homepage": "https://github.com/awolrob/stock-watch#readme"
}
